<div class="mb-5">
  <%= form_with url: services_path, method: :get, local: true, html: { class: "w-100" } do %>
    <div class="input-group shadow-sm rounded-pill overflow-hidden">
      <%= text_field_tag :query, params[:query], class: "form-control border-0 ps-4", placeholder: "ðŸ” Search for services..." %>
      <button class="btn btn-primary px-4" type="submit">Search</button>
    </div>
  <% end %>
</div>

<h2>All Services</h2>

<% @services.each do |service| %>
  <div class="card mb-3 shadow-sm">
    <div class="card-body">
      <h4><%= link_to service.title, service_path(service), class: "text-decoration-none" %></h4>
      <p><%= truncate(service.description, length: 100) %></p>
      <p><strong>Price:</strong> $<%= service.price %></p>
    </div>
  </div>
<% end %>
