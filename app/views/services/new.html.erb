<div class="container mt-4">
  <h2 class="text-center mb-4">Post a New Service</h2>

  <%= form_with model: @service, local: true do |f| %>
    <% if @service.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@service.errors.count, "error") %> prevented this service from being saved:</h4>
        <ul>
          <% @service.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :price %>
      <%= f.number_field :price, class: "form-control", step: 1 %>
    </div>

    <div class="mb-3">
      <%= f.submit "Create Service", class: "btn btn-success" %>
    </div>
  <% end %>
</div>

