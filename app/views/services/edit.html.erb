<div class="container mt-4">
  <h1>Edit Service</h1>

  <%= form_with(model: @service, local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :price %>
      <%= form.number_field :price, step: 0.01, class: "form-control" %>
    </div>

    <%= form.submit "Update Service", class: "btn btn-success" %>
    <%= link_to "Back", service_path(@service), class: "btn btn-secondary ms-2" %>
  <% end %>
</div>


